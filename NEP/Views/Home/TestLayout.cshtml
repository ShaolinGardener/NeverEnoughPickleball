<!DOCTYPE html>
<html>
<head>
    <title>Page Template</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .navigation {
            background-color: #333;
            color: #fff;
            padding: 10px;
        }

        .hero-header {
            background-color: #f0f0f0;
            padding: 100px;
            text-align: center;
        }

        .content {
            padding: 10% 10%;
            text-align: center;
        }

        .layer-container {
            position: relative;
            opacity: 70%;
            min-height: 100vh; /* Ensures the layer expands to full height */
        }

        .layer {
            position: fixed;
            bottom: 30px;
            right: 30px;
            width: 500px;
            height: 400px;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1;
        }

        .hero-section {
            width: 80%;
            margin: 0 auto;
            text-align: center;
            padding: 50px;
        }
    </style>
</head>
<body>
    <img src="/QrCoder/GetUserQRCode/21122112-2112-2112-2112-211221122112" width="200" />
    <img id="qrcode" width="200" />
    <script>
        fetch('/QrCoder/GetUserQRCode/21122112-2112-2112-2112-211221122112')
            .then(response => response.blob())
            .then(blob => {
                const url = URL.createObjectURL(blob);
                const imgElement = document.getElementById('qrcode');
                imgElement.src = url;
            }); </script>

</body>
</html>