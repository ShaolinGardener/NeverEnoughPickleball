@model NEP.Models.User

@{
    ViewData["Title"] = "Register Page";
    Layout = "_loginandregister";
}


<body style="background-color:white">
    <div id="Header_creative">
        <a href="#" class="creative-menu-toggle"><i class="icon-menu-fine"></i></a>
        <div class="creative-social">
        </div>
        <div class="creative-wrapper">
            <div class="header_placeholder"></div>
            <div id="Top_bar">
                <div class="one clearfix">
                    <div class="top_bar_left">

                        <div class="menu_wrapper">
                            <nav id="menu">
                                <ul id="menu-main-menu" class="menu menu-main">
                                    <li>
                                        <a href="/#Header_wrapper"><span>Home</span></a>
                                    </li>

                                </ul>
                            </nav>
                            <a class="responsive-menu-toggle" href="#"><i class="icon-menu-fine"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="section mcb-section " style="padding-top:0px; padding-bottom:0px">
        <div class="section_wrapper mcb-section-inner">
            <div class="column mcb-column one-second column_column">
                <img src="/img/RegisterPageImg.png" alt="Pickleball Player">

            </div>
            <div class="wrap mcb-wrap one-second valign-top clearfix" style="padding:20px 4% 20px">
                <div class="mcb-wrap-inner">
                    <div class="column mcb-column one">
                        <div class="right-section">
                            <div class="heading">
                                <h2>Become an Exclusive Member</h2>
                                <p>Log In To Continue</p>
                            </div>
                            <form asp-action="Register" method="post">
                                <div class="input-group">
                                    <input asp-for="FirstName" placeholder="First Name" />
                                    <span asp-validation-for="FirstName"></span>
                                    <input asp-for="LastName" placeholder="Last Name" />
                                    <span asp-validation-for="LastName"></span>
                                </div > 
                                <div class="input-container">
                                    <input asp-for="MobileNumber" placeholder="Mobile Number" />
                                    <span asp-validation-for="MobileNumber"></span>
                                </div>
                                <div class="input-container">
                                    <input asp-for="Email" placeholder="Email" />
                                    <span asp-validation-for="Email"></span>
                                </div>
                                <div class="input-container">
                                    <input asp-for="Password" placeholder="Password" />
                                    <span asp-validation-for="Password"></span>
                                </div>
                                <div class="input-container">
                                    <input asp-for="ZipCode" placeholder="Zipcode" />
                                    <span asp-validation-for="ZipCode"></span>
                                </div>
                                <div class="input-container">
                                    <select asp-for="MemberType">
                                        <option value="Member">Member</option>
                                        <option value="Non-Member">Non-Member</option>
                                    </select>
                                    <span asp-validation-for="MemberType"></span>
                                </div>
                                <button type="submit" class="cta-button">Register</button>
                            </form>
                            <p>Already a member? <a href="\Login\Index">Log In</a></p
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- side menu -->
    <div id="Side_slide" class="right dark" data-width="250">
        <div class="close-wrapper">
            <a href="#" class="close"><i class="icon-cancel-fine"></i></a>
        </div>
        <div class="menu_wrapper"></div>
    </div>
    <div id="body_overlay"></div>


    <script src="/gsm/js/jquery-3.6.0.min.js"></script>
    <script src="/gsm/js/jquery-migrate-3.4.0.min.js"></script>

    <script src="/gsm/js/mfn.menu.js"></script>
    <script src="/gsm/js/jquery.plugins.js"></script>
    <script src="/gsm/js/jquery.jplayer.min.js"></script>
    <script src="/gsm/js/animations/animations.js"></script>
    <script src="/gsm/js/translate3d.js"></script>
    <script src="/gsm/js/scripts.js"></script>

    <script src="/gsm/plugins/rs-plugin-5.3.1/js/jquery.themepunch.tools.min.js"></script>
    <script src="/gsm/plugins/rs-plugin-5.3.1/js/jquery.themepunch.revolution.min.js"></script>

    <script src="/gsm/plugins/rs-plugin-5.3.1/js/extensions/revolution.extension.video.min.js"></script>
    <script src="/gsm/plugins/rs-plugin-5.3.1/js/extensions/revolution.extension.slideanims.min.js"></script>
    <script src="/gsm/plugins/rs-plugin-5.3.1/js/extensions/revolution.extension.actions.min.js"></script>
    <script src="/gsm/plugins/rs-plugin-5.3.1/js/extensions/revolution.extension.layeranimation.min.js"></script>
    <script src="/gsm/plugins/rs-plugin-5.3.1/js/extensions/revolution.extension.kenburn.min.js"></script>
    <script src="/gsm/plugins/rs-plugin-5.3.1/js/extensions/revolution.extension.navigation.min.js"></script>
    <script src="/gsm/plugins/rs-plugin-5.3.1/js/extensions/revolution.extension.migration.min.js"></script>
    <script src="/gsm/plugins/rs-plugin-5.3.1/js/extensions/revolution.extension.parallax.min.js"></script>
    @*<script src="/js/validation.js"></script>*@

    @*<script src="http://maps.google.com/maps/api/js?sensor=false&ver=5.9"></script>*@
    <script src="/gsm/js/email.js"></script>

    <script>
        var revapi1, tpj = jQuery;
        tpj(document).ready(function () {
            if (tpj("#rev_slider_1_1").revolution == undefined) {
                revslider_showDoubleJqueryError("#rev_slider_1_1");
            } else {
                revapi1 = tpj("#rev_slider_1_1").show().revolution({
                    sliderType: "hero",
                    sliderLayout: "auto",
                    dottedOverlay: "none",
                    delay: 9000,
                    visibilityLevels: [1240, 1024, 778, 480],
                    gridwidth: 1240,
                    gridheight: 960,
                    lazyType: "none",
                    shadow: 0,
                    spinner: "spinner3",
                    autoHeight: "off",
                    disableProgressBar: "on",
                    hideThumbsOnMobile: "off",
                    hideSliderAtLimit: 0,
                    hideCaptionAtLimit: 0,
                    hideAllCaptionAtLilmit: 0,
                    debugMode: false,
                    fallbacks: {
                        simplifyAll: "off",
                        disableFocusListener: false,
                    }
                });
            }

            tpj(".tech-square").each(function (index, value) {
                tpj(this).hover(function () {
                    toggleThumbnail(this.dataset.id);
                });

                tpj(this).mouseleave(function () {
                    resetThumbs();
                })
            });
        });


        var currentId = 0;

        function resetThumbs() {
            tpj("#cat-thumb-" + currentId).show();
            tpj("#cat-thumb-hover-" + currentId).hide();
        }

        function toggleThumbnail(id) {
            //debugger;
            resetThumbs();
            currentId = id;
            var img = tpj("#cat-thumb-" + id);
            var imghover = tpj("#cat-thumb-hover-" + id);
            img.hide();
            imghover.show();
        }
    </script>
</body>